<div data-controller="stashlist" class="mb-15 mt-15">
  <nav class="level is-mobile">
    <div class="level-left">
      <div class="level-item mt-5">
        <a href="#" data-action="click->stashlist#toggle">
          <div class="is-size-7 has-text-weight-semibold has-text-grey-dark">
            STASHES (<%= @stashes.count %>)
            <span class="icon has-text-link ml-5" style="display: inline-table">
              <i class="fas fa-chevron-right" data-stashlist-target="chevron"></i>
            </span>
          </div>
        </a>
      </div>
    </div>
    <div class="level-right is-hidden-tablet">
      <%= render partial: 'transactions/components/transactionButtons', locals: { size: 'is-small' } %>
    </div>
  </nav>
  <div class="animate__animated animate__fadeIn is-hidden" data-stashlist-target="list"> <!-- Start hidden -->
    <nav class="level">
      <div class="level-left">
        <div class="level-item">
          <%= link_to new_account_stash_path, class: "button is-small is-primary" do %>
            <span>New Stash</span>
          <% end %>
        </div>
      </div>
    </nav>
    <div class="columns is-vcentered is-multiline">
      <%= render partial: "stashes/components/stashListCard", collection: @stashes, as: :stash %>
    </div>
  </div>
</div>
